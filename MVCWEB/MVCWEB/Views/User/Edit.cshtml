@model  MVCWEB.Models.ViewModels.EditUserViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Edit", "User", FormMethod.Post, new { role = "form", @class = "formulario" }))
        {
            <h2>Edición de Usuarios</h2>
            <hr />

            @Html.HiddenFor(d => d.idUser)
            @Html.AntiForgeryToken()

            <div class="form-group grupoControl">

                @Html.ValidationMessage("error", new { @class = "text-danger" })
                @Html.LabelFor(d => d.NombreUsuario)
                @Html.TextBoxFor(d => d.NombreUsuario, new { @class = "form-control" })

            </div>


            <div class="form-group grupoControl">
                @Html.ValidationMessage("error", new { @class = "text-danger" })
                @Html.LabelFor(d => d.email)
                @Html.TextBoxFor(d => d.email, new { @class = "form-control" })

            </div>


            <div class="form-group grupoControl">
                @Html.ValidationMessage("error", new { @class = "text-danger" })
                @Html.LabelFor(d => d.password)
                @Html.PasswordFor(d => d.password, new { @class = "form-control" })
            </div>



            <div class="form-group grupoControl">
                <hr />
                <button style="width:280px; height:100px;padding:0em" type="submit">Actualizar</button>
                <hr />
            </div>
        }
    </div>
</div>